<!DOCTYPE html>
<html>
  <head>
    <title>Unit 2 Assesment</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <% if (groceries.length === 0) { %>
      <p>There are no Groceries Yet!</p>
  
    <% } else { %>

      
      <ul>
        <%groceries.forEach((g) => { %>
          <li><%= g.grocerie %>
            <form action="/<%=g.id%>?_method=DELETE" method="POST">
              <input type="submit" value="x">
            </form>
            <form action="/<%=g.id%>?_method=PUT" method="POST">
              <input type="text" name="grocerie">
              <button type="submit">Edit</button>
            </form>
          </li>
          <% }) %>
        </ul>
        <%}%>
        <form action="/" method="POST">
          <input type="text" name="grocerie">
          <button type="submit">Add Groceries</button>
        </form>
      </body>
</html>
